<?xml version="1.0" encoding="UTF-8" ?>
<architecture wordSize="32">
	<register>
		<id>counter</id>
		<size>32</size>
		<inputs>
			<input>incrementer.out</input>
		</inputs>
		<output>out</output>
	</register>
	<alu>
		<id>incrementer</id>
		<wordSize>32</wordSize>
		<inputsOperandA>
			<input>counter.out</input>
		</inputsOperandA>
		<inputsOperandB>
			<input>:const.1</input>			
		</inputsOperandB>
		<output>out</output>
		<operations>
			<operation>add_u</operation>
		</operations>
	</alu>
</architecture>