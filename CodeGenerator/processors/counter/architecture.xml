<?xml version="1.0" encoding="UTF-8" ?>
<architecture wordSize="32">
	<register x="0" y="0">
		<id>counter1</id>
		<size>7</size>
		<inputs>
			<input>incrementer.out[0,6]</input>
		</inputs>
		<output>counter1.out</output>
		<control>system.const.1</control>
	</register>
	<register x="0" y="0">
		<id>counter2</id>
		<size>8</size>
		<inputs>
			<input>decrementer.out</input>
		</inputs>
		<output>counter2.out</output>
		<control>system.const.1</control>
	</register>
	<register x="0" y="0">
		<id>output_register1</id>
		<size>8</size>
		<inputs>
			<input>counter1.out</input>
		</inputs>
		<output>system.out.count_up</output>
		<control>system.const.1</control>
	</register>
	<register x="0" y="0">
		<id>output_register2</id>
		<size>8</size>
		<inputs>
			<input>counter2.out</input>
		</inputs>
		<output>system.out.count_down</output>
		<control>system.const.1</control>
	</register>
	<alu x="0" y="0">
		<id>incrementer</id>
		<wordSize>8</wordSize>
		<inputsOperandA>
			<input>counter1.out</input>	
		</inputsOperandA>
		<inputsOperandB>
			<input>system.in.step</input>		
		</inputsOperandB>
		<output1>incrementer.out</output1>
		<output2>system.open</output2>
		<operations>
			<operation>add_u</operation>
		</operations>
		<control>system.auto</control>
		<status>system.open</status>
	</alu>
	<alu x="0" y="0">
		<id>decrementer</id>
		<wordSize>8</wordSize>
		<inputsOperandA>
			<input>counter2.out</input>	
		</inputsOperandA>
		<inputsOperandB>
			<input>system.in.step</input>		
		</inputsOperandB>
		<output1>decrementer.out</output1>
		<output2>system.open</output2>
		<operations>
			<operation>sub_u</operation>
		</operations>
		<control>system.auto</control>
		<status>system.open</status>
	</alu>
</architecture>